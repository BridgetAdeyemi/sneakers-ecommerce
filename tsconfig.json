{
  "compilerOptions": {
    /* File Paths */
    "rootDir": "./src", // Where TS source files live
    "outDir": "./dist", // Where compiled JS goes

    /* Target environment */
    "target": "ES2020", // Modern JS output
    "module": "ES2020", // Module system for browsers
    "lib": ["ES2020", "DOM"], // Browser + modern features

    /* Type Safety */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noEmitOnError": true, // Donâ€™t emit JS if errors exist

    /* Compatibility */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"], // Only compile TS files
  "exclude": ["node_modules", "dist"]
}

